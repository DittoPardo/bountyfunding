[general]

# API port
port = 5000

# Enable debug error messages; True/False, for security reasons in production it should be False
debug = True

# SQLAlchemy database url.
# See http://docs.sqlalchemy.org/en/latest/core/engines.html
database_url = sqlite:///db/test.db

# Externally accessible location of bug tracker
tracker_url = http://localhost:8100

# Admin user identifier
admin = admin

# Maximum pledge amount
max_pledge_amount = 100

# Available payment gateways; PLAIN, PAYPAL_STANDARD, PAYPAL_REST
payment_gateways = PLAIN


[project]

# Enable default project that can be accessed without a token (used when this API serves only one project)
default = True

# Enable test projects (disable when API is available from outside world)
test = True


